@model IEnumerable<BloodBank.Models.EntityDiagram.Donor>
@{
    ViewBag.Title = "Index";
}
<style>
    .donor-list {
        padding: 15px;
        border: 1px solid #eee;
        margin-top: 5px
    }
    b {
        font-weight: bold
    }
</style>

<div class="content">
    <div class="container">
        <div class="contact">
            <div class="contact-header">
                <h3>Donors</h3>
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Donors</li>
                </ol>
            </div>
            <div class="contact_head">
                <div class="row">
                    <form action="/Donors" method="get">
                        <div class="col-sm-3 col-xs-6">
                            <select class="form-control" name="bloodGroup">
                                <option value="">All</option>
                                <option>A+</option>
                                <option>B+</option>
                                <option>AB+</option>
                                <option>O+</option>
                                <option>A-</option>
                                <option>B-</option>
                                <option>AB-</option>
                                <option>O-</option>
                            </select>
                        </div>
                        <div class="col-sm-3 col-xs-6">
                            <input class="form-control" name="area" placeholder="Area" />
                        </div>
                        <div class="col-sm-3 col-xs-6">
                            <input class="form-control" placeholder="District" name="district" />
                        </div>
                        <div class="col-sm-3 col-xs-6">
                            <input type="submit" class="btn btn-xs" value="Search" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="contact_head">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-12 donor-list">
                            <h4 style="font-weight: bold">@item.FullName <span class="pull-right btn">@item.BloodGroup</span></h4>
                            <p style="margin-bottom:0; line-height: 1.5;"><b>Mobile:</b> @item.Mobile; <b>Email Address:</b> @item.Email;</p>
                            <p style="margin-bottom:0; line-height: 1.5;"><b>Address:</b> @item.Address; <b>Area:</b> @item.Area; <b>District:</b> @item.District</p>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>
